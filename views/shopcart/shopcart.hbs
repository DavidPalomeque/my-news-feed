<div class="row mx-auto">

    {{#if shopcart}}

    {{#if total}}
    <div class="col-sm-12 col-md-4 mt-3">
        <div class="row">
            <div class="col-sm-6"> <h3>TOTAL : </h3> </div>
            <div class="col-sm-6"> <h3 style="color:#4BB543;"> ${{total.value}} </h3> </div>
        </div>
    </div>
    {{/if}}

    {{#if user}}
    <div class="col-sm-12 col-md-4 mt-3">
        <a href="/shopcart/buy/{{user._id}}" class="btn btn-sm btn-outline-success btn-block"> BUY ALL </a>
    </div>
    <div class="col-sm-12 col-md-4 mt-3">
        <a href="/shopcart/clean/{{user._id}}" class="btn btn-sm btn-outline-danger btn-block"> CLEAN ALL </a>
    </div>
    {{/if}}

    <div class="col-sm-12 mx-auto">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">PRODUCT</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">QUANTITY</th>
                        <th scope="col">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each shopcart}}
                    <tr>
                        <td>
                            <img class="img-fluid" src="{{imageURL}}" width="100px" height="100px">
                            {{name}}
                        </td>
                        <td><h5> ${{price}} (By unity) </h5></td>
                        <td><h5> {{boughtQuantity}} </h5></td>
                        <td>
                            <a href="/shopcart/deleteProduct/{{_id}}"> 
                                <h5> <i class="fas fa-trash-alt" style="color: red;font-size:larger"></i> </h5> 
                            </a> 
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    {{else}}
    
    <div class="col-sm-12 col-md-8 col-lg-6 mx-auto mt-5">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h3>There is no products to show !</h3>
        </div>
    </div>

    {{/if}}
</div>