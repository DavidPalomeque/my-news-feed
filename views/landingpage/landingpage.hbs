<div class="row mx-auto mt-5" style="background-color:#D1D1D1" id="row1">
    <div class="col-sm-12 col-md-8 mx-auto my-auto" style="font-style:italic;text-align:center">
        <div class="card">
            <div class="card-body">
    
                <form action="/" method="POST">

                    <div class="mx-auto">
                        <h4>Welcome to your feed</h4>
                        <h5>search about the topics that interest you</h5>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-4 mt-1">
                            <div class="input-group">
                                <select class="form-control" name="endpoint">
                                    <option value="everything">All news</option>
                                    <option value="top-headlines">Only Top Headlines</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 mt-1">
                            <div class="input-group">
                                <input name="keyword" type="text" class="form-control" placeholder="e.g., Bitcoin" required>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 mt-1">
                            <div class="input-group">
                                <select class="form-control" name="language">
                                    <option value="en">English</option>
                                    <option value="ar">Arabic</option>
                                    <option value="zh">Chinese (simplified)</option>
                                    <option value="fr">French</option>
                                    <option value="de">German</option>
                                    <option value="hi">Hindi</option>
                                    <option value="it">Italian</option>
                                    <option value="pt">Portuguese</option>
                                    <option value="ru">Russian</option>
                                    <option value="es">Spanish</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-4 mt-2">
                            <div class="input-group">
                                <select class="form-control" name="date">
                                    <option value="today">Today</option>
                                    <option value="yesterday">Yesterday</option>
                                    <option value="lastWeek">Last week</option>
                                    <option value="lastMonth">Last month</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 mt-2">
                            <div class="input-group">
                                <select class="form-control" name="sortBy">
                                    <option value="popularity">More popular</option>
                                    <option value="publishedAt">More recent</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 mt-2">
                            <button type="submit" class="btn btn-primary btn-block">Search</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mx-auto mt-5" style="background-color:#D1D1D1">
    {{#if news}}
    <div class="row">
    {{#each news}}
    <div class="col-3 d-flex align-items-stretch">
      <div class="card mb-3 mr-3 ml-3">
        <img src="{{urlToImage}}" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5> <span>{{source.name}} - {{author}}</span>
            <p class="card-text">{{description}}</p>
        </div>
        <div class="card-body mr-auto">
            <a href="{{url}}" class="card-link" style="color:green">Read+</a>
            <a href="#" class="card-link" style="color:black">Save <i class="far fa-bookmark"></i></a>
        </div>
      </div>
    </div>
    {{/each}}
    </div>
    {{/if}}
</div>

<div class="row mx-auto mt-5" style="background-color:#D1D1D1">
    <div class="col-sm-12 col-md-6 mx-auto" style="text-align: center;">
        <h1>CONTACT WITH THE DEVELOPER</h1>
        <form class="row" action="/contactForm" method="post">
            <div class="input-group col-sm-12 col-md-6">
                <input class="form-control m-3" type="text" name="name" placeholder="Your Name">
            </div>
            <div class="input-group col-sm-12 col-md-6">
                <input class="form-control m-3" type="email" name="email" placeholder="Your Email">
            </div>
            <div class="input-group col-sm-12">
                <textarea class="form-control m-3" name="content" rows="10" placeholder="Message"></textarea>
            </div>
            <div class="input-group col-sm-8 mx-auto">
                <button type="submit" class="btn btn-success btn-block">SEND</button>
            </div>
        </form>
    </div>
</div>

