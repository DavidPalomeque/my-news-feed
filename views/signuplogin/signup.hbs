<div class="row mx-auto">
    <div class="col-sm-12 col-md-6 col-lg-4 mx-auto">
        <div class="card mt-3">
            <div class="card-body">
                <h3 style="text-align: center;">SIGN UP</h3>
                <form action="/users/signup" method="POST">
                    <div class="input-group">
                        <input class="form-control m-3" type="text" name="name" placeholder="Name" required>
                    </div>
                    <div class="input-group">
                        <input class="form-control m-3" type="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="input-group">
                        <input class="form-control m-3" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="input-group">
                        <input class="form-control m-3" type="password" name="password2" placeholder="Confirm Password" required>
                    </div>
                    <div class="input-group">
                        <button type="submit" class="btn btn-success btn-block" style="color:white;"> CREATE ! </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>